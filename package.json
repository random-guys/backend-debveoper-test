{
  "name": "backend-developer-test",
  "version": "1.0.0",
  "description": "Create a API that serves the latest scores of fixtures of matches in a “**Mock Premier League**”",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "babel -d ./dist ./api -s",
    "dev": "nodemon --exec babel-node ./api/index.js",
    "pretest": "npm run build && node ./dist/seeders/index.js",
    "test": "cross-env NODE_ENV=test jest --coverage --colors --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cavdy-dev/backend-developer-test.git"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cavdy-dev/backend-developer-test/issues"
